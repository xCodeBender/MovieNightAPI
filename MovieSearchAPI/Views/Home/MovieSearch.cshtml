@{
}
@if (Model == null)
{
    <form method="post" asp-action="MovieSearch">
        <div>
            <p>Search by Title or Keywords:</p>
            <label for="Title">Title</label>
            <input name="Title" id="Title" required/>

            <input type="submit" />
        </div>
    </form>

}
else
{
    <h1>@Model.Title</h1>
    <img src="@Model.Poster" />
}
